<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02113c"
    tools:context=".SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.smart.ludoclassic.Fonts.HelveticaMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Welcome"
                android:textSize="20dp"
                android:id="@+id/Lable"
                android:layout_marginTop="140dp"
                android:textColor="@android:color/white"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/Lable"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/usernmLyt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border"

                    >

                    <com.smart.ludoclassic.Fonts.HelveticaLightEditText
                        android:id="@+id/userEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Username"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pwdLyt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/usernmLyt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border"

                    >

                    <com.smart.ludoclassic.Fonts.HelveticaLightEditText
                        android:id="@+id/pwdEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </RelativeLayout>



                <com.smart.ludoclassic.Fonts.HelveticaMediumButton
                    android:id="@+id/signinBtn"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/pwdLyt"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_border"
                    android:text="Log In"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />


                <com.smart.ludoclassic.Fonts.HelveticaMediumTextView
                    android:id="@+id/signupBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Don't Have an Account? Sign Up"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>